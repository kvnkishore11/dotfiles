#!/bin/bash

# ═══════════════════════════════════════════════════════════════════════════════
#  SketchyBar Configuration - Floating Islands + Catppuccin Mocha
#  Layout: [App] [Workspaces] ... [Clock] ... [WiFi Vol Batt Mic]
# ═══════════════════════════════════════════════════════════════════════════════

CONFIG_DIR="$HOME/.config/sketchybar"
PLUGIN_DIR="$CONFIG_DIR/plugins"

source "$CONFIG_DIR/colors.sh"
source "$CONFIG_DIR/icons.sh"

# ═══════════════════════════════════════════════════════════════════════════════
#  BAR APPEARANCE
# ═══════════════════════════════════════════════════════════════════════════════

sketchybar --bar \
  position=top \
  height=36 \
  color=0x00000000 \
  margin=8 \
  y_offset=4 \
  padding_left=8 \
  padding_right=8 \
  notch_width=200 \
  shadow=off

# ═══════════════════════════════════════════════════════════════════════════════
#  DEFAULT VALUES
# ═══════════════════════════════════════════════════════════════════════════════

default=(
  icon.font="Hack Nerd Font:Bold:14.0"
  icon.color=$ICON_COLOR
  icon.padding_left=8
  icon.padding_right=4

  label.font="Hack Nerd Font:Bold:13.0"
  label.color=$LABEL_COLOR
  label.padding_left=4
  label.padding_right=8

  background.color=$ISLAND_COLOR
  background.corner_radius=12
  background.height=28
  background.padding_left=4
  background.padding_right=4

  popup.background.color=$POPUP_BG_COLOR
  popup.background.corner_radius=12
  popup.background.border_width=2
  popup.background.border_color=$POPUP_BORDER_COLOR
)

sketchybar --default "${default[@]}"

# ═══════════════════════════════════════════════════════════════════════════════
#  LEFT SIDE - APP ISLAND (First!)
# ═══════════════════════════════════════════════════════════════════════════════

sketchybar --add item front_app left \
  --set front_app \
    icon.drawing=on \
    icon.font="sketchybar-app-font:Regular:16.0" \
    icon.color=$LAVENDER \
    label.font="Hack Nerd Font:Bold:13.0" \
    label.color=$TEXT \
    background.color=$ISLAND_COLOR \
    background.corner_radius=12 \
    background.height=28 \
    background.padding_left=6 \
    background.padding_right=6 \
    script="$PLUGIN_DIR/front_app.sh" \
  --subscribe front_app front_app_switched

# ═══════════════════════════════════════════════════════════════════════════════
#  LEFT SIDE - WORKSPACES (All workspaces, highlights active)
# ═══════════════════════════════════════════════════════════════════════════════

# Register aerospace event
sketchybar --add event aerospace_workspace_change

# Create all workspace items
WORKSPACES=("1" "2" "3" "4" "5" "6" "7" "8" "9" "W" "C" "A")

for sid in "${WORKSPACES[@]}"; do
  sketchybar --add item space.$sid left \
    --set space.$sid \
      icon="$sid" \
      icon.font="Hack Nerd Font:Bold:14.0" \
      icon.color=$TEXT \
      icon.padding_left=8 \
      icon.padding_right=8 \
      label.drawing=off \
      background.color=$YELLOW \
      background.corner_radius=6 \
      background.height=22 \
      background.drawing=off \
      click_script="aerospace workspace $sid" \
    --subscribe space.$sid aerospace_workspace_change
done

# Bracket for workspaces island
sketchybar --add bracket spaces '/space\..*/' \
  --set spaces \
    background.color=$ISLAND_COLOR \
    background.corner_radius=12 \
    background.height=28

# Hidden trigger to update all workspaces on event
sketchybar --add item spaces_updater left \
  --set spaces_updater \
    drawing=off \
    script="$PLUGIN_DIR/aerospace_spaces.sh" \
  --subscribe spaces_updater aerospace_workspace_change

# Initial update
"$PLUGIN_DIR/aerospace_spaces.sh"

# ═══════════════════════════════════════════════════════════════════════════════
#  RIGHT SIDE - CLOCK (moved from center to avoid notch)
# ═══════════════════════════════════════════════════════════════════════════════

sketchybar --add item clock right \
  --set clock \
    icon=$ICON_CLOCK \
    icon.font="Hack Nerd Font:Bold:14.0" \
    icon.color=$LAVENDER \
    icon.padding_left=10 \
    label.font="Hack Nerd Font:Bold:13.0" \
    label.color=$TEXT \
    label.padding_right=10 \
    background.color=$ISLAND_COLOR \
    background.corner_radius=12 \
    background.height=28 \
    update_freq=30 \
    script="$PLUGIN_DIR/clock.sh"

# ═══════════════════════════════════════════════════════════════════════════════
#  RIGHT SIDE - SYSTEM ISLAND
# ═══════════════════════════════════════════════════════════════════════════════

# Mic mute indicator (rightmost in island, appears first = rightmost)
sketchybar --add item mic right \
  --set mic \
    icon=$ICON_MIC \
    icon.font="Hack Nerd Font:Bold:14.0" \
    icon.color=$GREEN \
    label.drawing=off \
    background.drawing=off \
    script="$PLUGIN_DIR/mic.sh" \
    click_script="$PLUGIN_DIR/mic_click.sh"

# Battery
sketchybar --add item battery right \
  --set battery \
    icon.font="Hack Nerd Font:Bold:16.0" \
    label.font="Hack Nerd Font:Bold:11.0" \
    label.color=$SUBTEXT0 \
    background.drawing=off \
    update_freq=60 \
    script="$PLUGIN_DIR/battery.sh" \
  --subscribe battery system_woke power_source_change

# Volume
sketchybar --add item volume right \
  --set volume \
    icon.font="Hack Nerd Font:Bold:14.0" \
    icon.color=$PEACH \
    label.font="Hack Nerd Font:Bold:11.0" \
    label.color=$SUBTEXT0 \
    background.drawing=off \
    script="$PLUGIN_DIR/volume.sh" \
  --subscribe volume volume_change

# WiFi
sketchybar --add item wifi right \
  --set wifi \
    icon=$ICON_WIFI \
    icon.font="Hack Nerd Font:Bold:14.0" \
    icon.color=$SAPPHIRE \
    label.font="Hack Nerd Font:Bold:11.0" \
    label.color=$SUBTEXT0 \
    label.max_chars=12 \
    background.drawing=off \
    update_freq=30 \
    script="$PLUGIN_DIR/wifi.sh" \
    click_script="open 'x-apple.systempreferences:com.apple.preference.network'"

# Bracket for system items (order: wifi volume battery mic -> displayed right to left)
sketchybar --add bracket system wifi volume battery mic \
  --set system \
    background.color=$ISLAND_COLOR \
    background.corner_radius=12 \
    background.height=28

# ═══════════════════════════════════════════════════════════════════════════════
#  FINALIZE
# ═══════════════════════════════════════════════════════════════════════════════

sketchybar --hotload on
sketchybar --update
